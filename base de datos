CREATE TABLE IF NOT EXISTS donantes (
    id INT AUTO_INCREMENT PRIMARY KEY,  
    nombre VARCHAR(100) NOT NULL,  
    cedula VARCHAR(20) NOT NULL UNIQUE,  
    edad TINYINT UNSIGNED NOT NULL CHECK (edad BETWEEN 18 AND 100),  
    sexo ENUM('M', 'F') NOT NULL,  
    estado_civil ENUM('S', 'C', 'D', 'V') NULL,  
    tiene_tatuaje BOOLEAN NOT NULL,  
    consume_drogas BOOLEAN NOT NULL,  
    bebe_alcohol BOOLEAN NOT NULL, 
    fuma BOOLEAN NOT NULL, 
    preferencia_sexual VARCHAR(20) NULL, 
    lugar_trabajo VARCHAR(100) NULL,  
    ultima_donacion DATE NOT NULL,  
    ultima_prueba_vih DATE NOT NULL,  
    ha_estado_resfriado BOOLEAN NOT NULL,  
    ha_recibido_tratamiento_dental BOOLEAN NULL,  
    ha_utilizado_aspirina BOOLEAN NOT NULL,  
    se_siente_bien_salud BOOLEAN NOT NULL,  
    ha_tomado_medicamento_hoy BOOLEAN NOT NULL,  
    ha_sido_vacunado BOOLEAN NOT NULL, 
    tipo_sangre ENUM('A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-') NOT NULL  
);

CREATE TABLE IF NOT EXISTS solicitudes (
    id INT AUTO_INCREMENT PRIMARY KEY,  
    nombre VARCHAR(100) NOT NULL,  
    edad TINYINT UNSIGNED NOT NULL CHECK (edad > 0), 
    genero ENUM('M', 'F') NOT NULL,  
    tipo_sangre ENUM('A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-') NOT NULL,  
    cantidad_requerida_ml INT UNSIGNED NOT NULL CHECK (cantidad_requerida_ml > 0),  
    hospital VARCHAR(100) NOT NULL,  
    departamento_estado VARCHAR(50) NOT NULL,  
    ciudad VARCHAR(50) NOT NULL,  
    direccion_hospital VARCHAR(150) NOT NULL,  
    fecha_requerida DATE NOT NULL,  
    hora_requerida TIME NULL,  
    contacto VARCHAR(20) NOT NULL,  
    nombre_contacto VARCHAR(100) NOT NULL,  
    relacion_paciente VARCHAR(50) NOT NULL,  
    motivo_solicitud TEXT NOT NULL,  
    tipo_urgencia ENUM('Alta', 'Media', 'Baja') NOT NULL,  
    comentarios_adicionales TEXT NULL,  
    estado_solicitud ENUM('Pendiente', 'En proceso', 'Completado', 'Cancelado') NOT NULL,  
    fecha_registro TIMESTAMP DEFAULT CURRENT_TIMESTAMP,  
    registrado_por VARCHAR(100) NOT NULL
    );


